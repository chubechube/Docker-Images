version: '2'
volumes:
  logcontainer: {}

services:
  FileBeat:
    image: chube/filebeatwdm:latest
    labels:
      io.rancher.container.pull_image: always
      io.rancher.scheduler.affinity:host_label: "{RANCHER_ENVIRONMENT}"
    tty: true
    volumes:
    - logcontainer:/var/log/welfinity/
    stdin_open: true
  WDMService:
    image: chube/wdmservice:latest
    labels:
      io.rancher.container.pull_image: always
      io.rancher.scheduler.affinity:host_label: "{RANCHER_ENVIRONMENT}"
    tty: true
    volumes:
    - logcontainer:/var/log/welfinity/
    - /data:/data/
    stdin_open: true
